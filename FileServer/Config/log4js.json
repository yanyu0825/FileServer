{  
   "customBaseDir" : "./logs/",    
    "customDefaultAtt" : {
        "type": "dateFile",  
        "absolute": false,   
        "alwaysIncludePattern": true 
    }, 
    "appenders": [  
        { "type": "console", "category": "console" },  
        { "pattern": "debug_yyyyMMdd.txt", "category": "logDebug" },    
        { "pattern": "info_yyyyMMdd.txt", "category": "logInfo" },  
        { "pattern": "warn_yyyyMMdd.txt", "category": "logWarn" },  
        { "pattern": "err_yyyyMMdd.txt", "category": "logErr" }
    ],  
    "replaceConsole": true,  
    "levels": { "logDebug": "ALL", "logInfo": "ALL", "logWarn": "ALL", "logErr": "ALL" }  
}  